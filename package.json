{
  "name": "egd-colonoscopy-ai",
  "version": "1.0.0",
  "description": "AI-powered endoscopy lesion detection system using MedGemma",
  "main": "dist/api/app.js",
  "scripts": {
    "dev": "tsx watch src/api/app.ts",
    "build": "tsc || true",
    "start": "tsx src/api/app.ts",
    "start:prod": "node dist/api/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "db:migrate": "node scripts/migrate.js",
    "mcp:build": "cd mcp/server && npm run build",
    "mcp:dev": "cd mcp/server && npm run dev"
  },
  "keywords": [
    "medical",
    "ai",
    "endoscopy",
    "medgemma",
    "healthcare"
  ],
  "author": "EGD/Colonoscopy AI Team",
  "license": "UNLICENSED",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.515.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "sharp": "^0.33.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.5",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}