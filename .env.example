# Environment
NODE_ENV=development
PORT=3000

# Frontend
FRONTEND_URL=http://localhost:3001

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
S3_BUCKET_NAME=egd-endoscopia-images

# Neon Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@ep-xxx.sa-east-1.aws.neon.tech/neondb?sslmode=require
DB_POOL_MIN=2
DB_POOL_MAX=10

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MCP Server
MCP_SERVER_PATH=./mcp/server/dist/index.js

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Image Processing
MAX_IMAGE_SIZE_MB=50
TARGET_IMAGE_SIZE=896

# Model Configuration
MODEL_NAME=google/medgemma-4b-it
MODEL_INFERENCE_ENDPOINT=http://localhost:8080/predict